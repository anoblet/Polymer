{
  "entrypoint": "index.html",
  "shell": "src/app-root.html",
  "fragments": [
    "src/app/views/pages/page-home.html",
    "src/app/views/pages/page-state.html",
    "src/app/views/pages/page-country.html",
    "src/app/views/pages/page-settings.html"
  ],
  "sources": [
    "src/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
